/* pages/component/brand/blist/blist.wxss */
.fl{
  float: left;
}
.fr{
  float: right;
}
.clearfix::after{
  clear:both;
  content: ".";
  display: block;
  visibility: hidden;
  height: 0;
}
page{
  background: #f3f3f3;
}
.blistban{
  width: 750rpx;
  height: 340rpx;
  display: block;
}
.blistban image{
  display: block;
  width: 750rpx;
  height: 340rpx;
}
.btitw{
  width: 750rpx;
  height: 95rpx;
  background: #0cc8a5;
}
.btitw .btit{
  width: 220rpx;
  height: 95rpx;
  margin: 0 auto;
  font-size: 26rpx;
  color: #ffffff;
  font-weight: bold;
  line-height: 95rpx;
  text-align: center;
}
.btitw .btit .xian{
  width: 30rpx;
  height: 6rpx;
  background: #ffab00;
  margin-top: 45rpx;
}
/***品牌***/
.blistw{
  width: 750rpx;
}
.blistw .itemw{
  width: 750rpx;
  height: 510rpx;
  background: #fff;
  position: relative;
  margin-bottom: 30rpx;
}
.blistw .itemw .brandt{
  width: 750rpx;
  height: 245rpx;
  position: relative;
}
.blistw .itemw .brandt .bgimg{
  display: block;
  width: 750rpx;
  height: 245rpx;
}
.blistw .itemw .brandt .bgimg image{
  display: block;
  width: 750rpx;
  height: 245rpx;
}
.blistw .itemw .brandt .bgimgmask{
  background: rgba(0, 0, 0, 0.2);
  position: absolute;
  width: 750rpx;
  height: 245rpx;
  z-index: 5;
  top: 0;
  left: 0;
}
.blistw .itemw .brandt .brandinfo{
  width: 710rpx;
  height: 120rpx;
  position: absolute;
  top: 50rpx;
  left: 20rpx;
  z-index: 8;
}
.blistw .itemw .brandt .brandinfo .logo{
  width: 120rpx;
  height: 120rpx;
  display: block;
  border-radius: 15rpx;
  overflow: hidden;
}
.blistw .itemw .brandt .brandinfo .logo image{
  display: block;
  width: 120rpx;
  height: 120rpx;
}
.blistw .itemw .brandt .brandinfo .dl{
  margin-left: 15rpx;
  max-width: 380rpx;
}
.blistw .itemw .brandt .brandinfo .dl .dd{
  height: 70rpx;
  overflow: hidden;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #ffffff;
  font-weight: bold;
}
.blistw .itemw .brandt .brandinfo .dl .dd .ico{
  width: 35rpx;
  height: 25rpx;
  display: block;
  margin-top: 25rpx;
  margin-left: 15rpx;
}
.blistw .itemw .brandt .brandinfo .dl .dd .ico image{
  display: block;
  width: 35rpx;
  height: 25rpx;
}
.blistw .itemw .brandt .brandinfo .dl .dt{
  font-size: 24rpx;
  color: #ffffff;
  line-height: 25rpx;
}
.blistw .itemw .brandt .brandinfo .ckxq{
  width: 160rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background: #0cc8a5;
  text-align: center;
  line-height: 50rpx;
  overflow: hidden;
  font-size: 24rpx;
  color: #ffffff;
  margin-top: 35rpx;
}
.blistw .itemw .bgoods{
  width: 750rpx;
  height: 285rpx;
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
  z-index: 10;
}
.blistw .itemw .bgoods .glist{
  height: 270rpx;
  width: 750rpx;
  background: #fff;
}
.blistw .itemw .bgoods .glist scroll-view{
  height: 270rpx;
  width: 750rpx;
}
.blistw .itemw .bgoods .glist .item{
  display: inline-block;
  width: 202rpx;
  height: 255rpx;
  margin-top:10rpx;
  margin-right: 15rpx; 
}
.blistw .itemw .bgoods .glist .item:nth-of-type(1){
  margin-left: 15rpx;
}
.blistw .itemw .bgoods .glist .item .figure{
  width: 200rpx;
  height: 200rpx;
  border:1rpx solid #f8f8f8;
}
.blistw .itemw .bgoods .glist .item .figure image{
  display: block;
  width: 200rpx;
  height: 200rpx;
}
.blistw .itemw .bgoods .glist .item .price{
  height: 55rpx;
  width: 200rpx;
  overflow: hidden;
  text-align: center;
  line-height: 55rpx;
}
.blistw .itemw .bgoods .glist .item .price .xpri{
  font-size: 26rpx;
  color: #ed120f;
}
.blistw .itemw .bgoods .glist .item .price .ypri{
  font-size: 22rpx;
  color: #929292;
  text-decoration: line-through;
}