<!--pages/component/investment/investment.wxml-->
<form bindsubmit="formSubmit" report-submit="true">
  <view class="section clearfix">
    <view class="fl"><view class="xin fl"><image src="/images/hxin.jpg"></image></view>商户名称</view>
    <input type="text" name="shname" placeholder="商户名称" class="fl"/>
  </view>
  <view class="section clearfix">
    <view class="fl"><view class="xin fl"><image src="/images/hxin.jpg"></image></view>主营项目</view>
    <input type="text" name="zitem" placeholder="例如鞋帽，化妆品等" class="fl"/>
  </view>
  <view class="section clearfix">
    <view class="fl"><view class="xin fl"><image src="/images/hxin.jpg"></image></view>简单介绍</view>
    <input type="text" name="intro" placeholder="简单介绍下商户" class="fl"/>
  </view>
  <view class="section clearfix">
    <view class="fl"><view class="xin fl"><image src="/images/hxin.jpg"></image></view>联系人</view>
    <input type="text" name="contact" placeholder="联系人" class="fl"/>
  </view>
  <view class="section clearfix">
    <view class="fl"><view class="xin fl"><image src="/images/hxin.jpg"></image></view>手机号</view>
    <input type="text" name="tel" placeholder="您的手机号" class="fl"/>
  </view>
  <view class="section clearfix">
    <view class="fl"><view class="xin fl"><image src="/images/hxin.jpg"></image></view>企业名称</view>
    <input type="text" name="firm" placeholder="请输入企业名称" class="fl"/>
  </view>
  <view class="section clearfix">
    <view class="fl"><view class="xin fl"><image src="/images/hxin.jpg"></image></view>姓名</view>
    <input type="text" name="name" placeholder="请输入姓名" class="fl"/>
  </view>
  <view class="section clearfix">
    <view class="fl"><view class="xin fl"><image src="/images/hxin.jpg"></image></view>微信</view>
    <input type="text" name="wx" placeholder="请输入微信" class="fl"/>
  </view>
  <view class="section clearfix">
    <view class="fl"><view class="xin fl"><image src="/images/hxin.jpg"></image></view>身份证号码</view>
    <input type="idcard" name="icard" placeholder="身份证号码" class="fl"/>
  </view>
  <view class="apply">
    <button formType="submit">立即申请入驻</button>
  </view>
</form>
