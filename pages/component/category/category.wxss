/* pages/component/category/category.wxss */
.fl{
  float: left;
}
.fr{
  float: right;
}
.clearfix::after{
  content: ".";
  height: 0;
  clear:both;
  display: block;
  visibility: hidden;
}
.h-20{
  height: 20rpx;
}
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.searchW{
  padding: 20rpx 0;
  border-bottom: 2rpx solid #dddddd;
}
.search{
  width: 690rpx;
  height: 60rpx;
  border-radius: 30rpx;
  overflow: hidden;
  position: relative;
  background: #f1f1f1;
  text-align: center;
  margin: 0 auto;
}
.search .inp{
  width: 690rpx;
  height: 60rpx;
  border-radius: 30rpx;
  overflow: hidden;
  background: #f1f1f1;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}
.search .icon{
  position: absolute;
  width: 35rpx;
  height: 35rpx;
  left: 230rpx;
  top: 10rpx;
  z-index: 2;
}
.rollNavL{
  width: 165rpx;
  background: #f8f8f8;
}
.rollNavL scroll-view{
  width: 165rpx;
}
.rollNavL scroll-view .item{
  width: 165rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #f8f8f8;
  text-align: center;
  font-size: 24rpx;
}
.rollNavL scroll-view .item.on{
  background: #fff;
  font-size: 28rpx;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.goodsclass{
  width: 540prx;
  margin-right: 20rpx;
}
.goodsclass scroll-view{
  width: 540prx;
}
.goodsclass .banner{
  width: 540rpx;
  height: 190rpx;
  display: block;
  overflow: hidden;
}
.goodsclass .banner image{
  display: block;
  width: 540rpx;
  height: 190rpx;
}
.goodsclass .lab{
  height: 60rpx;
  line-height: 60rpx;
  display: block;
  font-size: 26rpx;
  color: #282828;
  font-weight: bold;
}
.classifyg{
  width: 540rpx;
}
.classifyg .item{
  width: 33.3%;
  margin-top: 30rpx;
}
.classifyg .item .figure{
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
}
.classifyg .item .figure image{
  display: block;
  width: 120rpx;
  height: 120rpx;
}
.classifyg .item .tit{
  width: 120rpx;
  margin: 20rpx auto;
  font-size: 24rpx;
  color: #3d3d3d;
  line-height: 30rpx;
  text-align: center;
}