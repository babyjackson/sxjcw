/* pages/component/baike/jbk/jbk.wxss */
.fl{
  float: left; 
}
.fr{
  float:right;
}
.clearfix::after{
  clear: both;
  content: ".";
  height: 0;
  visibility: hidden;
  display: block;
}
page{
  background: #f3f3f3;
}
.h-40{
  height: 40rpx;
}
.h-10{
  height: 10rpx;
}
.h-60{
  height: 60rpx;
}
.stopban{
  width: 750rpx;
  height: 285rpx;
  overflow: hidden;
  background: #fff;
}
.stopban .item{
  width: 430rpx;
  height: 280rpx;
  display: inline-block;
  border-radius: 10rpx;
  border:3rpx solid #0cc8a5;
  margin-right: 25rpx;
  overflow: hidden;
  position: relative;
}
.stopban .item:nth-of-type(1){
  margin-left: 25rpx;
}
.stopban .item .img{
  display: block;
  width: 430rpx;
  height: 280rpx;
}
.stopban .item .img image{
  display: block;
  width: 430rpx;
  height: 280rpx;
}
.stopban .item .mask{
  width: 430rpx;
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  height: 65rpx;
  background:rgba(12, 200, 165, 0.5);
}
.stopban .item .mask .tag{
  width: 120rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background: #0cc8a5;
  overflow: hidden;
  text-align: center;
  line-height: 40rpx;
  color: #ffffff;
  font-size: 24rpx;
  margin: 15rpx 0 0 20rpx;
}
.stopban .item .mask .ckxq{
  font-size: 22rpx;
  color: #ffffff;
  line-height: 65rpx;
  height: 65rpx;
  width: 110rpx;
  margin-right: 20rpx;
  text-align: center;
}

/**导航***/
.bknav{
  height: 40rpx;
  padding: 40rpx 20rpx 30rpx 20rpx;
  background: #fff;
}
.bknav .item{
  width: 150rpx;
  height:40rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  background:#fff;
  overflow: hidden;
  text-align: center;
  color: #474747;
  line-height: 40rpx;
}
.bknav .item.active{
  background:linear-gradient(to right, #0cc4aa, #0cafc4);
  color: #ffffff;
}
/***数据***/
.baikew{
  width:750rpx;
}
.baikew .item{
  width: 750rpx;
  height: 240rpx;
  overflow: hidden;
  border-top:1rpx solid #ececec;
  border-bottom: 1rpx solid #ececec;
  margin-top: 10rpx;
  background: #fff;
}
.baikew .item .dl{
  width: 365rpx;
  height: 200rpx;
  margin: 20rpx 0 0 30rpx;
}
.baikew .item .dl .tit{
  height: 90rpx;
  line-height: 45rpx;
  font-size: 28rpx;
  overflow: hidden;
  width: 365rpx;
  color: #000000;
}
.baikew .item .dl .dd{
  line-height: 30rpx;
  height: 30rpx;
  font-size: 22rpx;
  color: #999999;
}
.baikew .item .dl .dd text{
  margin: 0 10rpx;
}
.baikew .item .figure{
  width: 270rpx;
  height: 200rpx;
  display: block;
  margin: 20rpx 30rpx 0 0;
}
.baikew .item .figure image{
  display: block;
  width: 270rpx;
  height: 200rpx;
}
.loadmore{
  width: 235rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #eeeeee;
  margin: 35rpx auto;
  border-radius: 35rpx;
  overflow: hidden;
  font-size: 24rpx;
  color: #353235;
}