/* pages/component/store/mall/mall.wxss */
.fl{
  float:left;
}
.fr{
  float:right;
}

.clearfix::after{
  clear:both;
  content: ".";
  display: block;
  height: 0;
  visibility: hidden;
}
.h-30{
  height: 30rpx;
}
.mbanner{
  width: 750rpx;
  height: 300rpx;
  overflow: hidden;
}
.mbanner .mban{
  width: 750rpx;
  height: 300rpx;
}
.mbanner .mban .item{
  display: block;
  width: 750rpx;
  height: 300rpx;
}
.mbanner .mban .item image{
  display:block;
  width: 750rpx;
  height: 300rpx;
}
/**商品分类***/
.categoryw{
  width: 750rpx;
  height: 250rpx;
  background: #f6f6f6;
}
.categoryw .tit{
  width: 60rpx;
  height: 200rpx;
  overflow: hidden;
  display: block;
  padding-top: 20rpx;
}
.categoryw .tit image{
  display: block;
  width: 60rpx;
  height: 200rpx;
}
.category{
  width: 690rpx;
  height: 250rpx;
  overflow: hidden;
}
.category .item{
  width: 335rpx;
  height: 180rpx;
  background: #ffffff;
  display: inline-block;
  overflow: hidden;
  margin-top: 35rpx;
  margin-right: 28rpx;
}
.category .item:nth-of-type(1){
  margin-left: 28rpx;
}
.category .item .figure{
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx 10rpx;
}
.category .item .figure .xian{
  width: 35rpx;
  height: 4rpx;
  background: #0cc8a5;
  margin-left: 15rpx;
}
.category .item .figure .img{
  width: 140rpx;
  height: 130rpx;
}
.category .item .figure .img image{
  display: block;
  width: 140rpx;
  height: 130rpx;
}
.category .item .dl{
  width: 160rpx;
  height: 85rpx;
  margin-top: 50rpx;
  overflow: hidden;
}
.category .item .dl .tags{
  width: 105rpx;
  height: 35rpx;
  background: #0cc8a5;
  text-align: center;
  line-height: 35rpx;
  font-size: 22rpx;
  color: #ffffff;
}
.category .item .dl .tips{
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 5rpx;
  font-size: 20rpx;
  color: #515151;
  width: 160rpx;
  overflow: hidden;
}
/***品牌特选**/
.specialw{
  width: 750rpx;
  height: 660rpx;
  display: block;
  overflow: hidden;
  background: #fff;
}
.malltit{
  width: 180rpx;
  height: 90rpx;
  padding: 30rpx 0;
  margin: 0 auto;
  overflow: hidden;
}
.malltit .tit{
  width: 180rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #0cc8a5;
  font-weight: bold;
  text-align: center;
  overflow: hidden;
}
.malltit .tit .xian{
  width: 10rpx;
  height: 4rpx;
  background: #0cc8a5;
  margin-top: 25rpx;
}
.malltit .tips{
  font-size: 17rpx;
  color: #000000;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
}
.special{
  width: 750rpx;
  height: 510rpx;
}
.special .item{
  display: inline-block;
  width: 275rpx;
  height: 510rpx;
  overflow: hidden;
  margin-right: 30rpx;
}
.special .item:nth-of-type(1){
  margin-left: 30rpx;
}
.special .item .figure{
  display: block;
  width: 275rpx;
  height: 275rpx;
  background: #f7f7f7;
}
.special .item .figure image{
  display: block;
  width: 275rpx;
  height: 275rpx; 
}
.special .item .tit{
  width: 275rpx;
  height: 85rpx;
  line-height: 85rpx;
  font-size: 24rpx;
  overflow: hidden;
  color: #252525;
}
.special .item .price{
  width: 190rpx;
  height: 130rpx;
  overflow: hidden;
  margin: 0 auto;
  border-top: 2rpx dashed #c1c1c1;
}
.special .item .price .xpri{
  font-size: 30rpx;
  width: 190rpx;
  height: 60rpx;
  overflow: hidden;
  line-height: 60rpx;
  color: #000000;
  text-indent: 9rpx;
}
.special .item .price .ypri{
  text-indent: 9rpx;
  font-size: 24rpx;
  color: #a9a9a9;
}
/****爆款推荐***/
.hotstylew{
  height: 1125rpx;
  width: 750rpx;
  display: block;
  position: relative;
  background: #f6f6f6;
}
.hotstylew .hotbg{
  height: 1125rpx;
  width: 750rpx;
  display: block;
}
.hotstylew .hotbg image{
  display: block;
  width: 750rpx;
  height: 1125rpx;
}
.hotstylep{
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 1125rpx;
  overflow: hidden;
  z-index: 2;
}
.hotstyle{
  width: 610rpx;
  height: 865rpx;
  background: #fff;
  margin: 0 auto;
  box-shadow: 3rpx 3rpx 20rpx #dcdcdc;
  padding: 25rpx 30rpx 0 30rpx;
  overflow: hidden;
}
.hotstyle .item{
  width: 305rpx;
  height: 430rpx;
  display: block;
  overflow: hidden;
}
.hotstyle .item .figure{
  width: 305rpx;
  height: 260rpx;
  display: block;
  background: #f7f7f7;
}
.hotstyle .item .figure image{
  display: block;
  width: 305rpx;
  height: 260rpx;
}
.hotstyle .item .tit{
  line-height: 30rpx;
  height: 30rpx;
  width: 270rpx;
  overflow: hidden;
  margin: 0 auto;
  font-size: 24rpx;
  color: #292929;
  text-align: center;
}
.hotstyle .item .price{
  width: 270rpx;
  height: 90rpx;
  margin: 0 auto;
}
.hotstyle .item .price .xpri{
  font-size: 30rpx;
  color: #171717;
  line-height: 65rpx;
  height: 65rpx;
  overflow: hidden;
  text-align: center;
}
.hotstyle .item .price .ypri{
  font-size: 24rpx;
  color: #a9a9a9;
  text-align: center;
  line-height: 30rpx;
  height: 30rpx;
  overflow: hidden;
}
/***还没逛够***/
.wanderw{
  width: 750rpx;
  background: #ffffff;
}
.wander{
  padding: 0 15rpx;
}
.wander .item{
  width: 720rpx;
  height: 250rpx;
  overflow: hidden;
  margin-bottom: 45rpx;
}
.wander .item .figure{
  width: 250rpx;
  height: 250rpx;
  display: block;
  overflow: hidden;
  background: #f7f7f7;
  border:1rpx solid #f7f7f7;
}
.wander .item .figure image{
  display: block;
  width: 250rpx;
  height: 250rpx;
}
.wander .item .dl{
  width: 380rpx;
  height: 250rpx;
  margin-left: 35rpx;
}
.wander .item .dl .tit{
  width: 380rpx;
  margin: 35rpx 0;
  max-height: 60rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  overflow: hidden;
  color: #222222;
}
.wander .item .dl .price{
  height: 90rpx;
  overflow: hidden;
}
.wander .item .dl .price .xpri{
  font-size: 30rpx;
  color: #000000;
  line-height: 50rpx;
  height: 50rpx;
  overflow: hidden;
}
.wander .item .dl .price .ypri{
  font-size: 24rpx;
  color: #a9a9a9;
  line-height: 40rpx;
  height: 40rpx;
  overflow: hidden;
}
.viewmore{
  width: 750rpx;
  height: 60rpx;
  background: #0cc8a5;
  padding: 30rpx 0; 
}
.viewmore .more{
  width: 250rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #ffffff;
  margin: 0 auto;
  overflow: hidden;
  font-size: 20rpx;
  color: #0cc8a5;
  font-weight: bold;
  text-align: center;
  line-height: 60rpx;
}