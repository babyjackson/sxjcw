/* pages/component/store/list/list.wxss */
.fl{
  float:left;
}
.fr{
  float:right;
}
.clearfix::after{
  clear:both;
  content: ".";
  display: block;
  height: 0;
  visibility: hidden;
}
/***还没逛够***/
.wanderw{
  width: 750rpx;
  background: #ffffff;
}
.wander{
  padding: 0 15rpx;
}
.wander .item{
  width: 720rpx;
  height: 250rpx;
  overflow: hidden;
  margin-bottom: 45rpx;
}
.wander .item .figure{
  width: 250rpx;
  height: 250rpx;
  display: block;
  overflow: hidden;
  background: #f7f7f7;
  border:1rpx solid #f7f7f7;
}
.wander .item .figure image{
  display: block;
  width: 250rpx;
  height: 250rpx;
}
.wander .item .dl{
  width: 380rpx;
  height: 250rpx;
  margin-left: 35rpx;
}
.wander .item .dl .tit{
  width: 380rpx;
  margin: 35rpx 0;
  max-height: 60rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  overflow: hidden;
  color: #222222;
}
.wander .item .dl .price{
  height: 90rpx;
  overflow: hidden;
}
.wander .item .dl .price .xpri{
  font-size: 30rpx;
  color: #000000;
  line-height: 50rpx;
  height: 50rpx;
  overflow: hidden;
}
.wander .item .dl .price .ypri{
  font-size: 24rpx;
  color: #a9a9a9;
  line-height: 40rpx;
  height: 40rpx;
  overflow: hidden;
}
/***导航***/
.a-dropdown-wrapper {
    position: relative;
    flex-direction: column;
    width: 750rpx;
}

.a-dropdown-wrapper.expand {
    position: fixed;
    height: 100%;
    z-index: 99;
}
.navlist{
  background: #0cc8a5;
}
.a-dropdown-nav{
    display: block;
    background: #0cc8a5;
    position: relative;
    width:750rpx;
    min-height: 70rpx;
    z-index: 99;
}

.a-dropdown-nav-item {
    display: inline-block;
    text-align: center;
    height: 67rpx;
    line-height: 67rpx;
    font-size: 26rpx;
    color: #ffffff;
    padding: 0 10rpx;
    margin-right: 50rpx;
}
.a-dropdown-nav-item:nth-of-type(1){
  margin-left: 50rpx;
}

.a-dropdown-nav-item-hover {
    background: rgba(0, 0, 0, 0.03);
}

.a-dropdown-nav-item.active {
    color: #ffcb5f;
    border-bottom: 3rpx solid #ffcb5f;
}

.triangle {
    width: 0;
    height: 0;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    border-top: 10rpx solid #000;
    border-bottom: 0;
    vertical-align: middle;
    display: inline-block;
}
.a-dropdown-contents {
    width: 750rpx;
    background:#81ebd7;
}

.a-dropdown-list-items {
    background:#f6f6f6;
}
.a-dropdown-list-items .a-dropdown-list-item {
    float: left;
    width: 125rpx;
    height: 45rpx;
    background: #ffffff;
    border-radius: 10rpx;
    font-size: 20rpx;
    color: #a1a1a1;
    margin-left: 50rpx;
    margin-top: 30rpx;
    margin-bottom: 15rpx;
    text-align: center;
    line-height: 45rpx;
}

.a-dropdown-list-item.selected {
    color: #f76a24;
}

.a-dropdown-list-item .a-dropdown-list-item-bottom {
    display: block;
    position: absolute;
    width: 100%;
    border-bottom: 1px solid #ddd;
    left: 0;
    bottom: 0;
    right: auto;
    top: auto;
}

.a-dropdown-list-item .a-dropdown-list-item-thumb {
    width: 44rpx;
    height: 44rpx;
    margin-right: 30rpx;
}

.a-dropdown-list-item .a-dropdown-list-item-line {
    position: relative;
    display: flex;
    flex: 1;
    align-items: center;
    align-self: stretch;
    padding-right: 30rpx;
    min-height: 88rpx;
    overflow: hidden;
}

.a-dropdown-list-item .a-dropdown-list-item-content {
    flex: 1;
    font-size: 28rpx;
    text-align: left;
    line-height: 40rpx;
    width: auto;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.a-dropdown-list-item.last .a-dropdown-list-item-bottom {
    border-bottom: none;
}

.a-dropdown-list-item .a-dropdown-list-item-line-wrap .a-dropdown-list-item-content {
    white-space: normal;
}

.a-dropdown-list-item.a-dropdown-list-item-hover {
    background-color: #ddd;
}

.a-dropdown-list-item-check {
    display: block;
    width: 35rpx;
    height: 35rpx;
    margin-left: 16rpx;
   background-size: contain;
    background-repeat: no-repeat;
    background-position: 50% 50%;
    transition: transform 0.3s;
    visibility: hidden;
}

.a-dropdown-list-item.selected .a-dropdown-list-item-check {
    visibility: visible;
}

.a-dropdown-placeholder {
    min-height: 150rpx;
    z-index: 1;
    flex: 1;
}

.a-dropdown-bg {
    opacity: 0;
    transition: opacity linear 0.1s;
}

.expand .a-dropdown-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgb(0, 0, 0);
    opacity: 0.4;
    z-index: 1;
}
